.row
  .large-3.columns
    = form_for @user, :remote => true do |f|
      = f.label :name, :autofocus => true
      = f.text_field :name
      = f.label :email
      = f.text_field :email
      = f.label :balance
      = f.text_field :balance
      = f.label :password
      = f.password_field :password
      = f.label :password_confirmation
      = f.password_field :password_confirmation
      = f.submit nil, :class => 'button tiny'
  .large-9.columns
