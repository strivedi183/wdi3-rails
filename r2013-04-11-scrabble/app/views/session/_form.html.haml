- if @auth.present?
  = link_to(@auth.username, '/login', :method => :delete, :remote => true, :class => 'button tiny alert')
- else
  = form_tag '/login', :remote => true do
    .inline-block= text_field_tag :username, nil, :placeholder => 'Enter username'
    = submit_tag 'Login', :class => 'button tiny'