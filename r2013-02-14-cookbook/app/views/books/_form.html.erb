<%= form_for @book do |f| %>
  <%= f.label :title, "Cook Book Title" %>
  <%= f.text_field :title, :autofocus => 'autofocus' %>
  <%= f.label :cuisine, "Cuisine Style" %>
  <%= f.text_field :cuisine %>
  <%= f.label :chef, "Chef's Name" %>
  <%= f.text_field :chef %>
  <%= f.label :image, "Image Link (URL)" %>
  <%= f.text_field :image %>
  <br>
  <% Recipe.order(:name).each do |recipe| %>
    <span><%= recipe.name %></span>
    <span><%= check_box_tag 'book[recipe_ids][]', recipe.id, recipe.in?(@book.recipes.to_a) %></span>
  <% end %>
  <br>
  <br>
  <%= f.submit :class => 'btn btn-success' %>
<% end %>